%{ listy format - header}%
%TMPL:DEF{"listy::header"}%<noautolink><div id="$listyId" class='jqListy %IF{"'$sourceweb.$sourcetopic' allows 'change'" then="jqListyEditable"}% $class' data-source='$sourceweb.$sourcetopic' data-collection='$collection' data-all-collections='$allcollections' data-show-collections='$showcollections' data-item-types='$types' data-auto-save='$autosave' $style>
$topbuttons<ul class='jqListyContainer'>
%TMPL:END%

%{ listy format}%
%TMPL:DEF{"listy::format"}%<li id='$name'>
  <script class='jqListyData' type='application/json'> {
    "$name": $json
  }</script>
  $item
</li>%TMPL:END%

%{ listy format - footer}%
%TMPL:DEF{"listy::footer"}%
</ul>$bottombuttons$tml</div></noautolink>%TMPL:END%

%{ listy tools}%
%TMPL:DEF{"listy::item::tools"}%<span class='jqListyItemTools jqUITooltip' data-theme="info" data-arrow="true" data-delay="300" data-position="top">
  <a href='#' class='jqListyEdit' title='%MAKETEXT{"Edit this item"}%'>%JQICON{"fa-pencil"}%</a>
  <a href='#' class='jqListyAddHere' title='%MAKETEXT{"Insert a new item here"}%'>%JQICON{"fa-plus"}%</a>
  <a href='#' class='jqListyDelete' title='%MAKETEXT{"Delete this item"}%'>%JQICON{"fa-minus"}%</a>
</span>%TMPL:END%

%{ listy item formats}%
%TMPL:DEF{"listy::item::topic"}%<a href='$url' class='$class'>$title</a><div class='foswikiGrayText'>$summary</div>$tools%TMPL:END%
%TMPL:DEF{"listy::item::external"}%<a href='$url' class='$class'>$title</a><div class='foswikiGrayText'>$summary</div>$tools%TMPL:END%
%TMPL:DEF{"listy::item::text"}%<span class='$class'>$title</span><div class='foswikiGrayText'>$summary</div>$tools%TMPL:END%

%{ listy buttons}%
%TMPL:DEF{"listy::buttons"}%<!-- -->
<ul class='jqListyButtons jqUITooltip' data-theme="info" data-arrow="true" data-delay="300" data-position="right">
%TMPL:P{"listy::buttons::add"}%<!-- -->
%IF{"'$autosave' = 'false'"
  then="$percntTMPL:P{\"listy::buttons::save\"}$percnt$n$percntTMPL:P{\"listy::buttons::revert\"}$percnt"
}%</ul>
<!-- -->%TMPL:END%

